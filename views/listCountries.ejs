<style>
    table, th, td {
      border: 1px solid black;
    }
    </style>
<body> 
    <h1>Countries</h1>
<button onclick="window.location.href='/addCountry';">
    Add Country
  </button>

<table style="width:100%">
    <br></br>
    <tr>
    <th>Country Code</th>
    <th>Country Name</th>
    <th>Country Details</th>
    <th>Action</th>
    <th></th>
    </tr>
    <% countries.forEach((country) =>
    { %>
    <tr>

    <td><%= country.co_code %></td>
    <td><%= country.co_name %></td>
    <td><%= country.co_details %></td>
    <td><a href="/edit">Update</a></td>
    <td><a href="/delete">Delete</a></td>    
    </tr>
    <% }) %>
 
    </table>    
<a href ="/">Home</a>





    </body> 
    